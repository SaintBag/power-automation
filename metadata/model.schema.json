{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": ["facts", "dimensions"],
  "additionalProperties": false,

  "properties": {
    "facts": {
      "type": "object",
      "minProperties": 1,
      "additionalProperties": {
        "type": "object",
        "required": ["grain", "measures"],
        "additionalProperties": false,
        "properties": {
          "grain": {
            "type": "array",
            "minItems": 1,
            "items": { "type": "string" },
            "description": "Columns defining the grain of the fact table"
          },
          "measures": {
            "type": "array",
            "minItems": 1,
            "items": { "type": "string" },
            "description": "Numeric measures aggregated at the fact grain"
          },
          "foreign_keys": {
            "type": "array",
            "items": { "type": "string" },
            "description": "Foreign keys linking the fact to dimensions"
          }
        }
      }
    },

    "dimensions": {
      "type": "object",
      "minProperties": 1,
      "additionalProperties": {
        "type": "object",
        "required": ["key", "grain"],
        "additionalProperties": false,
        "properties": {
          "key": {
            "type": "string",
            "description": "Primary business key of the dimension"
          },
          "grain": {
            "type": "array",
            "minItems": 1,
            "items": { "type": "string" },
            "description": "Columns defining one row per dimension member"
          }
        }
      }
    }
  }
}
